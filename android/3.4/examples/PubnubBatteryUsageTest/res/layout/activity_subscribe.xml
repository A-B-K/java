<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SubscribeActivity" >

    <EditText
        android:id="@+id/txtSubscribeChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="Enter Channel Name" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSubscribeAdd"
        android:layout_alignRight="@+id/btnSubscribeAdd"
        android:gravity="center_horizontal"
        android:text="Subscribe" />

    <Button
        android:id="@+id/btnSubscribeAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSubscribeChannel"
        android:layout_below="@+id/txtSubscribeChannel"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:text="Add to Run" />

</RelativeLayout>